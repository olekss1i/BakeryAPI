{
  "ConnectionStrings": {
    "DefaultConnection": "Server=(localdb)\\mssqllocaldb;Database=BakeryDB;Trusted_Connection=True;"
  },
  "Logging": {
    "LogLevel": {
      "Default": "Information",
      "Microsoft.AspNetCore": "Warning",
      "Microsoft.EntityFrameworkCore.Database.Command": "Warning"
    }
  },
  "JwtSettings": {
    "Secret": "your-very-secure-jwt-secret-key-here",
    "Issuer": "BakeryAPI",
    "Audience": "BakeryAPI-Users",
    "ExpiryInMinutes": 60
  },
  "AllowedHosts": "*",
  "CorsPolicy": {
    "AllowedOrigins": [
      "http://localhost:3000",
      "https://yourfrontenddomain.com"
    ]
  }
}